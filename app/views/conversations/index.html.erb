<div>
 <h3>Mailbox</h3>
 <div>
  <div>
   <% @conversations.each do |conversation| %>
    <% conversation.unread_in_conversation(conversation) %>
    <% if conversation.output == true %>
     <%= "x" %>
     <% end %>
   <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
    <% if conversation.sender_id == current_user.id %>
      <% recipient = User.find(conversation.recipient_id) %>
    <% else %>
      <% recipient = User.find(conversation.sender_id) %>
    <% end %>
    <%= link_to recipient.username, conversation_messages_path(conversation)%>
   <% end %>
  <% end %>
  </div>
 </div>
</div>
<div>
 <h3>All Users</h3>
  <div>
   <% @users.each do |user| %>
    <% if user.id != current_user.id %>
     <div>
   <%= user.username %> <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%> <br>
 </div>
  <% end %>
 <% end %>
 </div>
</div>
