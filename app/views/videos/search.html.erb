
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h2>Search results</h2>
<% if @combined_results.present? %>

  <h3>title results</h3>
  <% @title_results.each do |result| %>
    <div class="search-result-video">
      <%= link_to "#{result.title}", result %>
      by
      <%= link_to result.user.username, '/users/' + result.user.id.to_s + '/profile' %>
    </div>
  <% end %>

  <h3>description results</h3>
  <% @description_results.each do |result| %>
    <div class="search-result-video">
      <%= link_to "#{result.title}", result %>
      by
      <%= link_to result.user.username, '/users/' + result.user.id.to_s + '/profile' %>
    </div>
  <% end %>

  <h3>tags results</h3>
  <% @tags_results.each do |result| %>
    <div class="search-result-video">
      <%= link_to "#{result.title}", result %>
      by
      <%= link_to result.user.username, '/users/' + result.user.id.to_s + '/profile' %><br>
      tags: <%= result.all_tags %><br>
    </div>
  <% end %>

  <h3>user results</h3>
  <% @user_results.each do |result| %>
    <div class="search-result-video">
      <%= link_to "#{result.title}", result %>
      by
      <%= link_to result.user.username, '/users/' + result.user.id.to_s + '/profile' %>
    </div>
  <% end %>

  <h3>combined results</h3>
  <% @combined_results.each do |result| %>
    <div class="search-result-video">
      <%= link_to "#{result.title}", result %>
      by
      <%= link_to result.user.username, '/users/' + result.user.id.to_s + '/profile' %>
    </div>
  <% end %>

  <% else %>
    <div class="notice">No search results match your search</div>
<% end %>
